<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="restrict_enable"
        android:title="@string/pref_restrict_enable"
        android:summary="@string/pref_restrict_enable_summary"
        android:defaultValue="false"
        />
    <ListPreference
        android:key="restrict_time"
        android:title="@string/pref_restrict_time"
        android:dependency="restrict_enable"
        android:entries="@array/restrict_entries"
        android:entryValues="@array/restrict_entry_values"
        android:defaultValue="10"
        />
</PreferenceScreen>